{
  "manifest_version": 3,
  "name": "HTML to Markdown Converter",
  "version": "1.0.0",
  "description": "Convert webpage content to clean Markdown format",
  "permissions": ["activeTab", "clipboardWrite", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
